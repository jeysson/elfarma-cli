<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:id="@+id/container"
    android:tag="layout/deprecated_common_simple_toolbar_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <ImageView android:id="@+id/back_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_back"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="@color/colorPrimary"/>

        <LinearLayout android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/space"
            android:layout_toEndOf="@+id/back_button">

            <TextView
                android:textSize="14sp"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/topbar_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAllCaps="true"
                android:text="@string/address_list_title"
                style="@style/Text.H2"/>

            <TextView android:textColor="@color/deprecated_medium_grey"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/subtitle"
                android:tag="binding_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                style="@style/Text.Description"/>
        </LinearLayout>

        <ImageView android:id="@+id/space"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="@color/colorPrimary"/>

        <ImageView android:id="@+id/share_button"
            android:tag="binding_4"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_share_restaurant_button"
            android:alpha="1"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_share"/>

        <ImageView android:id="@+id/search_button"
            android:tag="binding_5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_share_restaurant_button"
            android:alpha="1"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_search"
            app:tint="@color/colorPrimary"/>

    </RelativeLayout>
    <View android:id="@+id/divider"
        android:tag="binding_6"
        android:background="@color/deprecated_light_grey"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
