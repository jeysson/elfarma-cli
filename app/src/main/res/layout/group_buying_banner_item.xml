<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/group_buying_banner_item_view"
    android:tag="layout/group_buying_banner_item_0"
    android:background="@color/bubblegum"
    android:padding="@dimen/padding_group_buying_banner_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:textColor="@color/black"
        android:id="@+id/group_buying_banner_item_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_buying_banner_title"
        android:drawablePadding="@dimen/padding_group_buying_banner_components"
        android:drawableStart="@drawable/group_orders"
        style="@style/TextAppearance.DesignSystem.Paragraph.P2"/>

    <TextView android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dot"
        android:layout_marginStart="@dimen/padding_group_buying_banner_components"
        android:layout_marginEnd="@dimen/padding_group_buying_banner_components"
        style="@style/TextAppearance.DesignSystem.Paragraph.P2"/>

    <TextView android:textColor="@color/black"
        android:id="@+id/group_buying_banner_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.DesignSystem.Paragraph.P4"/>
</LinearLayout>
