<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <hashtag.elfarma.component.CustomProgressBar
        android:id="@+id/confirmed"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:max="100"
        android:min="0"
        android:progress="50"
        android:secondaryProgress="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cooking"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/LeftBar"/>

    <hashtag.elfarma.component.CustomProgressBar
        android:id="@+id/cooking"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:max="100"
        app:layout_constraintEnd_toStartOf="@+id/traveling"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toEndOf="@+id/confirmed"
        app:layout_constraintTop_toTopOf="@+id/confirmed"
        style="@style/OrderProgressBar"/>

    <hashtag.elfarma.component.CustomProgressBar
        android:id="@+id/traveling"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:max="100"
        app:layout_constraintEnd_toStartOf="@+id/completed"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/cooking"
        app:layout_constraintTop_toTopOf="@+id/cooking"
        style="@style/OrderProgressBar"/>

    <hashtag.elfarma.component.CustomProgressBar
        android:id="@+id/completed"
        android:layout_width="0dp"
        android:max="100"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/traveling"
        app:layout_constraintTop_toTopOf="@+id/traveling"
        style="@style/RightBar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
