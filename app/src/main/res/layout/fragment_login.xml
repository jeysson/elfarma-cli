<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/toolbar"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--p102br.com.ifood.core.toolkit.view.BottomCropImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/img_dishes"/-->

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/back_button"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_description_back"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="@color/colorPrimary"/>
    </RelativeLayout>

    <hashtag.alldelivery.component.Loading
        android:id="@+id/authentication_loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lv_color="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/container"
        app:layout_constraintEnd_toEndOf="@+id/container"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toTopOf="@+id/container"/>


    <TextView android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:id="@+id/userName"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="@string/authentication_home_title"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TextAppearance.DesignSystem.Title.H1"/>

    <LinearLayout android:orientation="vertical"
        android:id="@+id/title_layout"
        android:tag="binding_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/authentication_home_title"
            android:textAlignment="center"
            style="@style/TextAppearance.DesignSystem.Title.H1"/>


        <!--TextView android:textColor="@color/heavy_grey"
            android:layout_gravity="center_horizontal"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/authentication_home_subtitle"
            android:textAlignment="center"
            style="@style/TextAppearance.DesignSystem.Form.F1"/-->
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:id="@+id/container"
        android:tag="binding_3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:animateLayoutChanges="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/ButtonGoogle"
                android:id="@+id/btgoogle"
                android:clickable="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/icon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_form_check"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_google"/>

                <LinearLayout android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp">

                    <TextView android:layout_gravity="center"
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="@string/authenticate_with_google"
                        style="@style/TextAppearance.DesignSystem.Button.B1"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/subText"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.DesignSystem.Button.B3"/>
                </LinearLayout>

                <hashtag.alldelivery.component.Loading
                    android:layout_gravity="center"
                    android:id="@+id/loading"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:lv_color="@color/white"/>
            </LinearLayout>

            <!--include
                android:id="@+id/google_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                layout="@layout/load_button_google"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/-->

            <include android:id="@+id/other_button"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                layout="@layout/load_button_others"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView android:textSize="15sp"
            android:textColor="@color/heavy_grey"
            android:layout_gravity="center_horizontal"
            android:id="@+id/skip_button"
            android:padding="8dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="@string/continue_as_guest"
            style="@style/Text.ListTitleSmall"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
