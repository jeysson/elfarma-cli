<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="40dp"
    android:paddingEnd="40dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_order_a_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/medium_gray"
        android:shape="ring"
        app:cardCornerRadius="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/medium_gray"
        app:strokeWidth="0dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/internal_view_order_a_z"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:shape="ring"
            app:cardCornerRadius="35dp"
            app:strokeWidth="0dp">

            <View
                android:id="@+id/view_order_a_z"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/img_order_a_z"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:rotation="90"
                android:src="@drawable/ic_order_arrows" />

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/txt_order_a_z"
        style="@style/Text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/oderna_o_padr_o"
        android:textAlignment="center"
        android:textColor="@color/deprecated_dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/card_view_order_a_z"
        app:layout_constraintStart_toStartOf="@+id/card_view_order_a_z"
        app:layout_constraintTop_toBottomOf="@+id/card_view_order_a_z" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_order_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/medium_gray"
        android:shape="ring"
        app:cardCornerRadius="36dp"
        app:layout_constraintEnd_toStartOf="@+id/card_view_order_timer"
        app:layout_constraintStart_toEndOf="@+id/card_view_order_a_z"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/medium_gray"
        app:strokeWidth="0dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/internal_view_order_location"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:shape="ring"
            app:cardCornerRadius="35dp">

            <View
                android:id="@+id/view_order_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/img_order_location"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_outline_location_on_24" />

        </com.google.android.material.card.MaterialCardView>


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/txt_order_location"
        style="@style/Text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/localiza_o"
        android:textAlignment="center"
        android:textColor="@color/deprecated_dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/card_view_order_location"
        app:layout_constraintStart_toStartOf="@+id/card_view_order_location"
        app:layout_constraintTop_toBottomOf="@+id/card_view_order_location" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_order_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/medium_gray"
        android:shape="ring"
        app:cardCornerRadius="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/medium_gray"
        app:strokeWidth="0dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/internal_view_order_timer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:shape="ring"
            android:layout_margin="1dp"
            app:cardCornerRadius="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/medium_gray"
            app:strokeWidth="0dp">

            <View
                android:id="@+id/view_order_timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/img_order_timer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_timer_24" />

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/txt_order_timer"
        style="@style/Text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/tempo_de_entrega"
        android:textAlignment="center"
        android:textColor="@color/deprecated_dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/card_view_order_timer"
        app:layout_constraintStart_toStartOf="@+id/card_view_order_timer"
        app:layout_constraintTop_toBottomOf="@+id/card_view_order_timer" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_order_delivery_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/medium_gray"
        android:shape="ring"
        app:cardCornerRadius="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_order_a_z"
        app:strokeColor="@color/medium_gray"
        app:strokeWidth="0dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/internal_view_order_delivery_fee"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:shape="ring"
            android:layout_margin="1dp"
            app:cardCornerRadius="35dp"
            android:layout_gravity="center"
            app:strokeColor="@color/medium_gray"
            app:strokeWidth="0dp">

            <View
                android:id="@+id/view_order_delivery_fee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/img_order_delivery_fee"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_attach_money_24" />

        </com.google.android.material.card.MaterialCardView>


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/txt_order_delivery_fee"
        style="@style/Text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/taxa_de_entrega"
        android:textAlignment="center"
        android:textColor="@color/deprecated_dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/card_view_order_delivery_fee"
        app:layout_constraintStart_toStartOf="@+id/card_view_order_delivery_fee"
        app:layout_constraintTop_toBottomOf="@+id/card_view_order_delivery_fee" />

</androidx.constraintlayout.widget.ConstraintLayout>