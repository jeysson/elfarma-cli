<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:id="@+id/bt"
    android:background="@drawable/bg_payment_item"
    android:paddingTop="@dimen/space_size_16dp"
    android:paddingBottom="@dimen/space_size_16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_size_16dp"
    android:paddingStart="@dimen/space_size_16dp"
    android:paddingEnd="@dimen/space_size_16dp"
    android:clickable="true">

    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/brand"
        android:layout_width="@dimen/space_size_32dp"
        android:layout_height="@dimen/space_size_32dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:id="@+id/title"
        android:tag="binding_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/space_size_20dp"
        android:layout_marginEnd="@dimen/space_size_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/brand"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.DesignSystem.Paragraph.P3"/>
</androidx.constraintlayout.widget.ConstraintLayout>
