<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.store.StoreBagFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50_dp"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="@dimen/dim_0_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBasket"
                android:layout_width="@dimen/dim_basket_size"
                android:layout_height="@dimen/dim_basket_size"
                android:layout_marginStart="@dimen/dim_24_dp"
                android:src="@drawable/ic_basket1"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/basket" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ver_cesta"
                style="@style/TextAppearance.DesignSystem.Title.H3"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/txtPrecoTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="R$ 00,00"
                style="@style/TextAppearance.DesignSystem.Title.H3"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/dim_24_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dim_badge"
                android:layout_height="@dimen/dim_badge"
                android:layout_marginStart="@dimen/dim_22_dp"
                android:src="@drawable/ic_circle"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/imgBasket"
                app:layout_constraintStart_toStartOf="@+id/imgBasket"
                app:layout_constraintTop_toTopOf="@+id/imgBasket"
                app:layout_constraintVertical_bias="0.05"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/txtQtdItens"
                style="@style/TextAppearance.DesignSystem.Title.H5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                tools:text="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>